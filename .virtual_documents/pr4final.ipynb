# Import required libraries
import pandas as pd
import matplotlib.pyplot as plt
from matplotlib.lines import Line2D
from sklearn.preprocessing import StandardScaler
from sklearn.decomposition import PCA
from sklearn.cluster import KMeans



data = pd.read_csv('Mall_Customers.csv')


data.head()


data.shape


data.info


data.rename(columns={'Genre': 'Gender'}, inplace=True)


data.describe


data.drop(labels='CustomerID', axis=1, inplace=True)


data.isnull().sum()


data.dtypes


data['Gender'].value_counts()


data['Gender'] = data['Gender'].replace({'Male': 1, 'Female': 0})


data.info()


sc = StandardScaler()
data_scaled = sc.fit_transform(data)


pca = PCA(n_components=2)
data_pca = pca.fit_transform(data_scaled)

print("Data shape after PCA:", data_pca.shape)
print("data_pca is:", data_pca)


import os
import warnings
os.environ["OMP_NUM_THREADS"] = "1"
warnings.filterwarnings("ignore")

plt_font = {'family': 'serif', 'size': 14}
wcss_list = []

for i in range(1, 15):
    kmeans = KMeans(n_clusters=i, init='k-means++', random_state=1)
    kmeans.fit(data_pca)
    wcss_list.append(kmeans.inertia_)

# Elbow plot
plt.plot(range(1, 15), wcss_list, marker='o')
plt.plot([4, 4], [0, max(wcss_list)], linestyle='--', alpha=0.7)
plt.text(4.2, max(wcss_list) * 0.6, 'Elbow = 4')
plt.xlabel('Number of Clusters (K)', fontdict=plt_font)
plt.ylabel('WCSS', fontdict=plt_font)
plt.title('Elbow Method for Optimal K', fontdict=plt_font)
plt.grid(True)
plt.show()



kmeans = KMeans(n_clusters=4, init='k-means++', random_state=1)
kmeans.fit(data_pca)
cluster_id = kmeans.predict(data_pca)



result_data = pd.DataFrame({
    'PC1': data_pca[:, 0],
    'PC2': data_pca[:, 1],
    'ClusterID': cluster_id
})



# Colors for clusters
cluster_colors = {0: 'tab:red', 1: 'tab:green', 2: 'tab:blue', 3: 'tab:pink'}
cluster_dict = {
    'Centroid': 'tab:orange',
    'Cluster0': 'tab:red',
    'Cluster1': 'tab:green',
    'Cluster2': 'tab:blue',
    'Cluster3': 'tab:pink'
}

# Scatter plot
plt.scatter(x=result_data['PC1'], y=result_data['PC2'],
            c=result_data['ClusterID'].map(cluster_colors))

# Legend
handles = [Line2D([0], [0], marker='o', color='w', markerfacecolor=v,
                  label=k, markersize=8) for k, v in cluster_dict.items()]
plt.legend(title='Color', handles=handles, bbox_to_anchor=(1.05, 1), loc='upper left')

# Centroids
plt.scatter(x=kmeans.cluster_centers_[:, 0], y=kmeans.cluster_centers_[:, 1],
            marker='o', c='tab:orange', s=150, alpha=1)

# Labels and title
plt.title("Clustered by K-Means", fontdict=plt_font)
plt.xlabel("PC1", fontdict=plt_font)
plt.ylabel("PC2", fontdict=plt_font)
plt.show()



from sklearn.decomposition import PCA

# Apply PCA to reduce to 3 dimensions
pca_3d = PCA(n_components=3)
data_pca_3d = pca_3d.fit_transform(data_scaled)

print("Shape after 3D PCA:", data_pca_3d.shape)



from sklearn.cluster import KMeans

kmeans_3d = KMeans(n_clusters=4, init='k-means++', random_state=1)
kmeans_3d.fit(data_pca_3d)
cluster_id_3d = kmeans_3d.predict(data_pca_3d)



import pandas as pd

result_3d = pd.DataFrame({
    'PC1': data_pca_3d[:, 0],
    'PC2': data_pca_3d[:, 1],
    'PC3': data_pca_3d[:, 2],
    'ClusterID': cluster_id_3d
})



import plotly.express as px

fig = px.scatter_3d(
    result_3d,
    x='PC1', y='PC2', z='PC3',
    color=result_3d['ClusterID'].astype(str),
    color_discrete_sequence=['red', 'green', 'blue', 'purple'],
    title='3D K-Means Clusters (Interactive)'
)
fig.show()




