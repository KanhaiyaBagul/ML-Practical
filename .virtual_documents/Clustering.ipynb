import pandas as pd
import numpy as np
from sklearn.preprocessing import LabelEncoder, StandardScaler
from sklearn.model_selection import train_test_split
from sklearn.cluster import KMeans, AgglomerativeClustering
from sklearn.metrics import silhouette_score, davies_bouldin_score, calinski_harabasz_score
from sklearn.model_selection import KFold
import matplotlib.pyplot as plt
import seaborn as sns


data = pd.read_csv('Mall_Customers.csv')
print(data.head())


le = LabelEncoder()
data['Genre'] = le.fit_transform(data['Genre'])  


features = data[['Age', 'Annual Income (k$)', 'Spending Score (1-100)']]


scaler = StandardScaler()
features_scaled = scaler.fit_transform(features)



X_train, X_test = train_test_split(features_scaled, test_size=0.3, random_state=42)



import os
os.environ["OMP_NUM_THREADS"] = "1"

from sklearn.cluster import KMeans
kmeans = KMeans(n_clusters=5, random_state=42)
kmeans.fit(X_train)
kmeans_labels = kmeans.predict(X_test)



agglo = AgglomerativeClustering(n_clusters=5)
agglo_labels = agglo.fit_predict(X_test)



print("K-Means Silhouette Score:", silhouette_score(X_test, kmeans_labels))
print("K-Means Davies-Bouldin Index:", davies_bouldin_score(X_test, kmeans_labels))
print("K-Means Calinski-Harabasz Index:", calinski_harabasz_score(X_test, kmeans_labels))



kf = KFold(n_splits=5, shuffle=True, random_state=42)
silhouette_scores_kmeans = []
silhouette_scores_agglo = []

for train_index, test_index in kf.split(features_scaled):
    X_tr, X_te = features_scaled[train_index], features_scaled[test_index]


    kmeans_cv = KMeans(n_clusters=5, random_state=42)
    kmeans_cv.fit(X_tr)
    labels_km = kmeans_cv.predict(X_te)
    silhouette_scores_kmeans.append(silhouette_score(X_te, labels_km))

   
    agglo_cv = AgglomerativeClustering(n_clusters=5)
    labels_ag = agglo_cv.fit_predict(X_te)
    silhouette_scores_agglo.append(silhouette_score(X_te, labels_ag))

print("K-Means CV Silhouette Scores:", silhouette_scores_kmeans)
print("Agglomerative CV Silhouette Scores:", silhouette_scores_agglo)
print("Average K-Means Silhouette:", np.mean(silhouette_scores_kmeans))
print("Average Agglomerative Silhouette:", np.mean(silhouette_scores_agglo))



plt.scatter(X_test[:, 1], X_test[:, 2], c=kmeans_labels, cmap='viridis')
plt.xlabel('Annual Income (scaled)')
plt.ylabel('Spending Score (scaled)')
plt.title('K-Means Clusters')
plt.show()



from mpl_toolkits.mplot3d import Axes3D

def plot_3d_clusters(X, labels, title):
    fig = plt.figure(figsize=(10, 7))
    ax = fig.add_subplot(111, projection='3d')
    scatter = ax.scatter(X[:, 0], X[:, 1], X[:, 2], c=labels, cmap='viridis', s=50)
    
    ax.set_xlabel('Age (scaled)')
    ax.set_ylabel('Annual Income (scaled)')
    ax.set_zlabel('Spending Score (scaled)')
    ax.set_title(title)
    
    legend1 = ax.legend(*scatter.legend_elements(), title="Clusters")
    ax.add_artist(legend1)
    plt.show()


plot_3d_clusters(X_test, kmeans_labels, 'K-Means Clusters (3D)')

plot_3d_clusters(X_test, agglo_labels, 'Agglomerative Clusters (3D)')

